{
	"$schema": "https://turbo.build/schema.json",
	"tasks": {
		"//#format-and-lint": {},
		"//#format-and-lint:fix": {
			"cache": false
		},
		"build": {
			"dependsOn": ["^build"],
			"outputs": ["dist/**"]
		},
    "build:production": {
      "dependsOn": ["^build:production"],
			"outputs": ["dist/**"]
    },
		"clean": { "cache": false },
		"clean:modules": {"cache": false},
		"clean:full": {"cache": false },
		"check-types": {
			"dependsOn": ["^check-types"]
		},
		"dev": {
			"persistent": true,
			"cache": false
		}
	}
}
