{
  "compilerOptions": {
      "target": "ES2020",
      "module": "Node16",
      "strict": true,
      "declaration": true,
      "declarationMap": true,
      "rootDir": "src",
      "outDir": "dist",
      "resolveJsonModule": true,
      "esModuleInterop": true,
      "skipLibCheck": true,
  },
  "include": ["src"],
  "exclude": ["node_modules"]
}